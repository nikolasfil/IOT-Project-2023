<script type="text/javascript" defer>window.onload = function () {
  {{!-- {{#if device}} --}}
  {{!-- mapInit({{lon}},{{lat}}); --}}
  {{!-- {{else}} --}}
  {{! mapMult(); }}

  {{#if serial}}
    mapRoute("{{serial}}");
  {{/if}}

  }
</script>