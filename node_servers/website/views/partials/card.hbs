{{! change the name of the partial ! }}

<card class="card-img-top card-space">
  <div class="card-div" draggable="false">
    {{! fix it so that there is a link for devices/id }}
    <a
      {{!-- href={{encode (concat "device_info/" d_id)}} --}}
      href={{encode (concat "device_info/" serial)}}
      class="d-flex flex-column align-content-center"
    >
      <div class="status-div">
        <div class="status-circle-active">{{status}}</div>
          <div style="text-align: center; position: relative;">
              <img src="img/svg/battery_status.svg" alt="Battery Status">
              <span style="position: absolute; top: 50%; left: 45%; transform: translate(-50%, -50%); font-weight: 600">{{battery}}</span>
          </div>
      </div>
      <div class="status-div">
        <span class="card-text-bold">DEVICE_ID:</span>
        <span class="card-text-normal">{{d_id}}</span>
      </div>
      <div class="status-div">
        <span class="card-text-bold">TYPE:</span>
        <span class="card-text-normal">{{type}}</span>
      </div>
      <div class="status-div">
        <span class="card-text-bold">SERIAL:</span>
        <span class="card-text-normal">{{serial}}</span>
      </div>
    </a>
  </div>
</card>